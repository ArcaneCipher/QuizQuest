<!DOCTYPE html>
<html lang="en">

<head>
  <title>Create New Quiz - QuizQuest</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
    rel="stylesheet">
  <!-- Bootstrap -->
  <link rel="stylesheet" href="/vendor/bootstrap/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="/vendor/bootstrap/bootstrap.bundle.min.js"></script>
  <script type="text/javascript" src="/scripts/creating-new-quiz.js"></script>
</head>

<body class="scroll-snap">
  <%- include('partials/_header', { req: req }) %>

  <div class="container mt-5 pt-5">
    <div class="container"> <!-- Don't need the margin top padding anymore. layout.css handles it -->
      <h2>Create New Quiz</h2>
      <form id="create-quiz-form" action="/quizzes/new" method="POST">
        <!-- Quiz Title -->
        <div class="form-group mb-3">
          <label>Quiz Title</label>
          <input type="text" name="quiz_name" class="form-control" required>
        </div>

        <!-- Quiz Description -->
        <div class="form-group mb-3">
          <label>Description</label>
          <textarea name="quiz_description" class="form-control" required></textarea>
        </div>

        <!-- Quiz Category -->
        <div class="form group mb-3">
          <label>Category</label>
          <select name="quiz_category" class="form-control" required>
            <% categories.forEach(category => { %>
              <option value="<%= category.category %>"><%= category.category %></option>
            <% }); %>
          </select>
        </div>

        <!-- Public or Private -->
        <div class="form-check mb-3">
          <input type="checkbox" name="is_public" class="form-check-input" checked>
          <label class="form-check-label">Make Quiz Public</label>
        </div>

        <!-- Dynamic Questions Section -->
        <div id="questions-container">
          <!-- Initial Question Block -->
          <div class="question-block" data-question-id="0">
            <label>Question:</label>
            <input type="text" name="questions[0][text]" placeholder="Enter the question" class="form-control mb-2" required>

            <!-- Answers -->
            <div class="answers-container">
              <label>Answer:</label>
              <input type="text" name="questions[0][answers][0][text]" placeholder="Enter an answer" class="form-control mb-2" required>
            </div>

            <!-- Add Answer Button -->
            <button type="button" id="addAnswer" class="btn btn-secondary btn-sm mt-2">Add Answer</button>

            <!-- Correct Answer Dropdown -->
            <div class="correct-answer-container mt-3">
              <label for="questions[0][correct]">Correct Answer:</label>
              <select name="questions[0][correct]" class="form-control correct-answer-dropdown" required>
                <option value="" disabled selected>Select the correct answer</option>
                <option value="0">Answer 1</option>
              </select>
            </div>
          </div>
        </div>

        <button type="button" class="btn btn-primary btn-sm mt-3" id="add-question">Add Question</button>
        <button type="submit" class="btn btn-success mt-3">Submit Quiz</button>
      </form>
    </div>
  </div>
</body>
</html>
</html>
