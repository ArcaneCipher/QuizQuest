<!DOCTYPE html>
<html lang="en">

<head>
  <title>Create New Quiz - QuizQuest</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
    rel="stylesheet">
  <!-- Bootstrap -->
  <link rel="stylesheet" href="/vendor/bootstrap/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="/vendor/bootstrap/bootstrap.bundle.min.js"></script>
  <script type="text/javascript" src="/scripts/creating-new-quiz.js"></script>
</head>

<body class="scroll-snap">
  <%- include('partials/_header', { req: req }) %>

  <section class="create-quiz py-5 px-md-0 px-2">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
            
          <h1 class="mb-5 text-center">Create New Quiz</h1>
          <div class="bg-layout p-md-5 px-3 py-5">
        <form id="create-quiz-form" action="/quizzes/new" method="POST">
          <!-- Quiz Title -->
          <div class="form-group mb-3">
            <label>Quiz Title</label>
            <input type="text" name="quiz_name" class="form-control" required>
          </div>
  
          <!-- Quiz Description -->
          <div class="form-group mb-3">
            <label>Description</label>
            <textarea name="quiz_description" class="form-control" required></textarea>
          </div>
  
          <!-- Quiz Category -->
          <div class="form group mb-3">
            <label>Category</label>
            <select name="quiz_category" class="form-control form-select" required>
              <% categories.forEach(category => { %>
                <option value="<%= category.category %>"><%= category.category %></option>
              <% }); %>
            </select>
          </div>
  
          <!-- Public or Private -->
          <div class="form-check mb-3 ps-0">
            <label class="d-block">Visibility</label>
            <div class="d-flex align-items-center">
              <input type="checkbox" name="is_public" id="visibility" class="form-check-input" checked>
              <label for="visibility"></label> 
              <span class="order-0">Public</span>
              <span class="order-2">Private</span>
            </div>
          </div>
  
          <!-- Dynamic Questions Section -->
          <div id="questions-container">
            <!-- Initial Question Block -->
            <div class="question-block" data-question-id="0">
              <div class="form-group mb-3">
                <label>Question</label>
                <input type="text" name="questions[0][text]" placeholder="Enter the question" class="form-control" required>
              </div>
  
              <!-- Answers -->
              <div class="answers-container mb-3">
                <label>Answer</label>
                <input type="text" name="questions[0][answers][0][text]" placeholder="Enter an answer" class="form-control mb-3" required>
              </div>
  
              <!-- Add Answer Button -->
              <button type="button" id="addAnswer" class="btn btn-secondary mb-3">Add Answer</button>
  
              <!-- Correct Answer Dropdown -->
              <div class="correct-answer-container mb-3">
                <label for="questions[0][correct]">Correct Answer</label>
                <select name="questions[0][correct]" class="form-control correct-answer-dropdown form-select" required>
                  <option value="" disabled selected>Select the correct answer</option>
                  <option value="0">Answer 1</option>
                </select>
              </div>
            </div>
          </div>
          <div class="d-flex align-items-center gap-3 mt-3">
            <button type="button" class="btn btn-info" id="add-question">Add Question</button>
            <button type="submit" class="btn btn-primary">Submit Quiz</button>
          </div>
  
        </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
</html>
</html>
